<% unless cart.line_items.empty? %>

<br />

  <div class="cart_title"><%= link_to "Your Cart", carts_path %></div>
  <table>
    <%= render cart.line_items %>

    <tr class="total_line">
      <td colspan='2'>Total</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
  </table>
  <br />

  <%= button_to 'Empty cart', cart, :method => :delete, data: { confirm: 'You sure?' } %>

<% end %>
